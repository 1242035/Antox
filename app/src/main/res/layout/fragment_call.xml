<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <SurfaceView
        android:id="@+id/video_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/call_upper_half" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friend_name"
        android:layout_marginTop="60dp"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/mic_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_mic_black_36dp" />

        <ImageButton
            android:id="@+id/mic_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_mic_off_black_36dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/speaker_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_volume_up_black_36dp" />

        <ImageButton
            android:id="@+id/speaker_loudspeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_speaker_phone_black_36dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/speaker_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_volume_off_black_36dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/return_to_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_chat_black_36dp"/>

        <ImageButton
            android:id="@+id/video_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_videocam_black_36dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/video_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_videocam_off_black_36dp" />
    </LinearLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:clickable="true">

        <FrameLayout
            android:id="@+id/end_call_frame"
            android:layout_width="72dp"
            android:layout_height="72dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/end_call_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/red" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_end_white_36dp" />
        </FrameLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</RelativeLayout>