<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <include layout="@layout/call_upper_half"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/friend_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/mic_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_black_36dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mic_off_black_36dp"
            android:visibility="gone"
            android:id="@+id/mic_off"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_36dp"
            android:id="@+id/speaker_on"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_off_black_36dp"
            android:id="@+id/speaker_off"
            android:visibility="gone"
            android:background="@drawable/background_circle" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_black_36dp"
            android:id="@+id/video_on"
            android:visibility="gone"
            android:background="@drawable/background_circle" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_off_black_36dp"
            android:id="@+id/video_off"
            android:background="@drawable/background_circle"/>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/end_call_circle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_call_end_white_36dp"
        app:backgroundTint="@color/red"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

