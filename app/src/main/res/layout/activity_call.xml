<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    tools:context="chat.tox.antox.CallActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/call_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@color/grey_light"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friend_name"
        android:text="Nickname"
        android:singleLine="true"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/call_avatar"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friend_name"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/call_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_smallish"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <Chronometer
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:59:59"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_smallish" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/friend_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/mic_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic_black_36dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mic_off_black_36dp"
            android:visibility="gone"
            android:id="@+id/mic_off"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_36dp"
            android:id="@+id/speaker_on"
            android:background="@drawable/background_circle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_off_black_36dp"
            android:id="@+id/speaker_off"
            android:visibility="gone"
            android:background="@drawable/background_circle" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_black_36dp"
            android:id="@+id/video_on"
            android:visibility="gone"
            android:background="@drawable/background_circle" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_videocam_off_black_36dp"
            android:id="@+id/video_off"
            android:background="@drawable/background_circle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:baselineAligned="false">

        <FrameLayout
            android:id="@+id/end_call_frame"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/end_call_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/red"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_end_white_36dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/answer_call_frame"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/answer_call_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/green"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_white_36dp"/>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
